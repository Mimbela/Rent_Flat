
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/PlantillaLogin.cshtml";
}

<h2>Acceso a la Administración</h2>
@using (Html.BeginForm())
{
    <div class="login-content">
        <div class="login-form">


            <div class="form-group">

                <label>LOGIN</label>
                <input type="text" name="login" class="au-input au-input--full" placeholder="LOGIN" />

            </div>
            <div class="form-group">

                <label>CONTRASEÑA</label>


                <input type="password" name="password" class="au-input au-input--full" placeholder="contraseña" />
            </div>

            <div>

                <div>
                    <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">LOG IN</button>
                </div>
            </div>


        </div>
    </div>
}

<h1>@ViewBag.Mensaje</h1>


