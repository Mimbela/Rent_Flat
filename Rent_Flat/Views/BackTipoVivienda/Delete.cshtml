@model RepositorioRentFlat.Context.Tipos_Vivienda

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/PlantillaBack.cshtml";
}



<div class="card">

    <div class="card-header">ELIMINAR</div>

    <div class="card-body">

        <hr />
        <div class="card-title">
            <h3 class="text-center title-2">¿Estás seguro que quieres eliminar?</h3>
        </div>



        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

        </dl>

