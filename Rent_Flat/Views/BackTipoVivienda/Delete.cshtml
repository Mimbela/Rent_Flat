            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Eliminar", "EliminarTipoVivienda", new { id = Model.Cod_tipo_vivienda }, new { @class = "btn btn-lg btn-info btn-block" }) |
