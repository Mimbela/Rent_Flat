@model RepositorioRentFlat.Context.Tipos_Vivienda

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/PlantillaBack.cshtml";
}

@*<h2 style="color:red">Modificar tipo de vivienda</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">Modificar tipo de vivienda:</div>
    <div class="card-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Cod_tipo_vivienda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cod_tipo_vivienda, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Cod_tipo_vivienda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modificar" class="btn btn-lg btn-info btn-block" />
            </div>
        </div>
    </div>
</div>
   
}

<div>
    @Html.ActionLink("Volver", "GetTiposVivienda")
</div>
