@model IEnumerable<RepositorioRentFlat.Context.Viviendas>

@{
    ViewBag.Title = "Viviendas";
    Layout = "~/Views/Shared/PlantillaBack.cshtml";
}

<h2>Viviendas</h2>

<p>
    @Html.ActionLink("Crear Nueva Vivienda", "Create", new { }, new { @class = "btn btn-outline-primary" })
</p>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive table--no-card m-b-30">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Cod_casa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cod_Provincia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ubicacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Codigo_Posta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ciudad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Num_habitaciones)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Num_banios)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tamanio_vivienda)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Garaje)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cod_casa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cod_Provincia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdCliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ubicacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo_Posta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ciudad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Num_habitaciones)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Num_banios)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tamanio_vivienda)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Garaje)
                                </td>
                                <td>
                                    @Html.ActionLink("MODIFICAR", "Edit", new { id = item.Cod_casa }, new { @class = "btn btn-outline-info" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Cod_casa })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>