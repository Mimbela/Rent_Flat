@model IEnumerable<RepositorioRentFlat.Context.Costas>

@{
    ViewBag.Title = "Nombre_Costas";
    Layout = "~/Views/Shared/PlantillaBack.cshtml";
}

<h2>Costas</h2>
<hr />
<p>
    @Html.ActionLink("Crear Nueva Costa", "Create",new { },new { @class= "btn btn-outline-primary" })
</p>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive table--no-card m-b-30">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Cod_Provincia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreProvincia)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cod_Provincia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreProvincia)
                            </td>
                            <td>
                                @Html.ActionLink("Modificar", "Edit", new { id=item.Cod_Provincia },new { @class= "btn btn-outline-info" }) 
                                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.Cod_Provincia }, new { @class = "btn btn-outline-info" })
                            </td>
                        </tr>
                        }
                    </tbody>



                </table>
            </div>
        </div>
    </div>
</div>







